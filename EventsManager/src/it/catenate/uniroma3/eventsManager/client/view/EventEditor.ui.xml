<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.datepicker.client" xmlns:p2="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:HorizontalPanel width="100%" height="20%">
			<g:VerticalPanel width="100%" height="100%">
				<g:Label text="Nome"/>
				<g:TextBox/>
			</g:VerticalPanel>
			<g:VerticalPanel height="100%" width="100%">
				<g:Label text="Data"/>
				<p1:DateBox/>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:FlowPanel width="50%" height="25%">
			<g:ListBox visibleItemCount="5" height="100%" width="100%"/>
		</g:FlowPanel>
		<g:FlowPanel height="55%" width="100%">
			<g:Label text="Note" width="25%" height="25%"/>
			<g:TextArea width="100%" height="100%"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'	
 xmlns:edt='urn:import:it.catenate.uniroma3.eventsManager.client.view'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}" height="100%" width="100%">
		<g:DisclosurePanel open="true" width="100%">
			<g:header>Informazioni Base</g:header>
			<edt:EventEditor ui:field="eventEditor" width="100%" height="100%"></edt:EventEditor>
		</g:DisclosurePanel>
		<g:TabPanel width="100%" height="100%">
			<g:Tab text="Inserimento Spese" >
			<g:FlowPanel height="102px" width="100%"/>
			</g:Tab>
		</g:TabPanel>
		<g:FlowPanel width="100%" styleName="{style.panel}">
			<g:Button ui:field="clearButton" text="Reset">Reset</g:Button>
			<g:Button ui:field="saveButton" focus="true">Save</g:Button>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
